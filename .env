# Port to run the server on 
PORT=5000

# URL to the chat model
CHAT_MODEL_URL=http://localhost:5000/models/chat/model.json

# URL to the predictive model
PREDICTIVE_MODEL_URL=http://localhost:5000/models/predictive/model.json

# Allowed origin for CORS
CORS_ORIGIN=http://localhost:3000  # Modify or change for production

# Flag to enable HTTPS
HTTPS_ENABLED=false  # Set to 'true' if using HTTPS

# Paths to SSL certificates (only needed if HTTPS_ENABLED=true)
SSL_PRIVATE_KEY_PATH=/path/to/your/private.key
SSL_CERTIFICATE_PATH=/path/to/your/certificate.crt
SSL_CA_PATH=/path/to/your/ca_bundle.crt

# Environment mode (e.g., development, production)
NODE_ENV=development
